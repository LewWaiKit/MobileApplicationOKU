<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/box1"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Tan Ah Ming"
                android:textColor="#060606"
                android:textSize="46dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivProfile" />

            <View
                android:id="@+id/hr"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#6F060606"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Contact No :"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@+id/hr"
                app:layout_constraintTop_toBottomOf="@+id/hr" />

            <TextView
                android:id="@+id/tvIc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="IC Number :"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/tvPhone"
                app:layout_constraintTop_toBottomOf="@+id/tvPhone" />

            <TextView
                android:id="@+id/tvGender2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Gender :"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/tvIc"
                app:layout_constraintTop_toBottomOf="@+id/tvIc" />

            <TextView
                android:id="@+id/tvAddress4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvAddress5"
                app:layout_constraintEnd_toEndOf="@+id/tvGender2"
                app:layout_constraintTop_toTopOf="@+id/tvAddress5" />

            <TextView
                android:id="@+id/tvState2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="State :"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/tvAddress4"
                app:layout_constraintTop_toBottomOf="@+id/tvAddress5" />

            <TextView
                android:id="@+id/tvProfileEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Email :"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/tvState2"
                app:layout_constraintTop_toBottomOf="@+id/tvState2" />

            <TextView
                android:id="@+id/tvUserType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="User type :"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/tvProfileEmail"
                app:layout_constraintTop_toBottomOf="@+id/tvProfileEmail1" />

            <TextView
                android:id="@+id/tvOkuCardNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Oku CardNo:"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/tvUserType"
                app:layout_constraintTop_toBottomOf="@+id/tvUserType" />

            <TextView
                android:id="@+id/tvCare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Care by :"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/tvOkuCardNo"
                app:layout_constraintTop_toBottomOf="@+id/tvOkuCardNo" />

            <TextView
                android:id="@+id/tvPhone2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvPhone"
                app:layout_constraintEnd_toEndOf="@+id/hr"
                app:layout_constraintStart_toEndOf="@+id/tvPhone"
                app:layout_constraintTop_toTopOf="@+id/tvPhone" />

            <TextView
                android:id="@+id/tvIc2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvIc"
                app:layout_constraintEnd_toEndOf="@+id/tvPhone2"
                app:layout_constraintStart_toStartOf="@+id/tvPhone2"
                app:layout_constraintTop_toTopOf="@+id/tvIc"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvGender3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvGender2"
                app:layout_constraintEnd_toEndOf="@+id/tvIc2"
                app:layout_constraintStart_toStartOf="@+id/tvIc2"
                app:layout_constraintTop_toTopOf="@+id/tvGender2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvAddress5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="@+id/tvGender3"
                app:layout_constraintStart_toStartOf="@+id/tvGender3"
                app:layout_constraintTop_toBottomOf="@+id/tvGender3" />

            <TextView
                android:id="@+id/tvState3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvState2"
                app:layout_constraintEnd_toEndOf="@+id/tvAddress5"
                app:layout_constraintStart_toStartOf="@+id/tvAddress5"
                app:layout_constraintTop_toTopOf="@+id/tvState2" />

            <TextView
                android:id="@+id/tvProfileEmail1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvProfileEmail"
                app:layout_constraintEnd_toEndOf="@+id/tvState3"
                app:layout_constraintStart_toStartOf="@+id/tvState3"
                app:layout_constraintTop_toTopOf="@+id/tvProfileEmail" />

            <TextView
                android:id="@+id/tvUserType1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvUserType"
                app:layout_constraintEnd_toEndOf="@+id/tvProfileEmail1"
                app:layout_constraintStart_toStartOf="@+id/tvProfileEmail1"
                app:layout_constraintTop_toTopOf="@+id/tvUserType" />

            <TextView
                android:id="@+id/tvOkuCardNo1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvOkuCardNo"
                app:layout_constraintEnd_toEndOf="@+id/tvUserType1"
                app:layout_constraintStart_toStartOf="@+id/tvUserType1"
                app:layout_constraintTop_toTopOf="@+id/tvOkuCardNo" />

            <TextView
                android:id="@+id/tvCare1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#060606"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCare"
                app:layout_constraintEnd_toEndOf="@+id/tvOkuCardNo1"
                app:layout_constraintStart_toStartOf="@+id/tvOkuCardNo1"
                app:layout_constraintTop_toTopOf="@+id/tvCare" />

            <ImageView
                android:id="@+id/ivCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/ivProfile"
                app:layout_constraintEnd_toEndOf="@+id/ivProfile"
                app:srcCompat="@drawable/ic_camera" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/hr"
                app:layout_constraintStart_toStartOf="@+id/hr"
                app:layout_constraintTop_toBottomOf="@+id/tvCare1"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:padding="10dp"
                    android:text="Save"
                    app:backgroundTint="#CDDC39"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="552dp" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Cancel"
                    app:backgroundTint="#FF5722"
                    tools:layout_editor_absoluteX="309dp"
                    tools:layout_editor_absoluteY="552dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/Empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:layout_editor_absoluteX="45dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>